@model SocialGoal.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "../Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

<link href="/Content/CustomStyles.css" rel="stylesheet" type="text/css" />

<div class="navbar navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="brand" href='@Url.Action("Index", "Home")'>Demo WEB</a>
        </div>
    </div>
</div>

<div class="container-fluid margin-top">
    <div class="row-fluid">
        <div class="span7" id="content">
            <div style="padding:80px;">
                <img src="/Images/replacement%20people.jpg" />
            </div>

        </div>


        <div class="span4 row-fluid">
            <div class="row">
                <div class="col-md-8">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>帳號登入</h4>
                            <hr />
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserAccount, new { @class = "col-md-2 control-label", style = "text-align: left;width:80px;" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.UserAccount, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.UserAccount)
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", style = "text-align: left;width:80px" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="登入" class="btn btn-primary" />
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("註冊", "Register") 如果還沒有帳號請註冊
                            </p>
                        }
                    </section>
                </div>
                <div class="col-md-4">
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


